<mvc:View
    controllerName="project1.controller.Request"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:t="sap.ui.table"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout"
    xmlns:core="sap.ui.core"
    height="100%">
    <f:DynamicPage id="RequestPage">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <HBox>
                        <Title text="물품 요청 목록" />
                    </HBox>
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm layout="ResponsiveGridLayout">
                    <form:content>
                        <VBox >
                            <Label text="요청 번호 : " />
                            <Input id="ReqNum" />
                            <layoutData>
                                <layout:GridData span="XL2 L2 M6 S12"/>
                            </layoutData>
                        </VBox>
                        <VBox >
                            <Label text="요청 물품 : " />
                            <Input id="ReqGood" />
                            <layoutData>
                                <layout:GridData span="XL2 L2 M6 S12"/>
                            </layoutData>
                        </VBox>
                        <VBox >
                            <Label text="요청자 : " />
                            <Input id="Requester" />
                            <layoutData>
                                <layout:GridData span="XL2 L2 M6 S12"/>
                            </layoutData>
                        </VBox>
                        <VBox >
                            <Label text="요청 일자 : " />
                            <DatePicker 
                                id="ReqDate"
                                displayFormat="yyyy-MM"
                            />
                            <layoutData>
                                <layout:GridData span="XL2 L2 M6 S12"/>
                            </layoutData>
                        </VBox>
                        <VBox >
                            <Label text="처리 상태 : " />
                            <Select width="100%" id="ReqStatus">
                                <core:Item text="전체" />
                                <core:Item text="승인" key='A'/>
                                <core:Item text="처리대기" key='B'/>
                                <core:Item text="반려" key='C'/>
                            </Select>
                            <layoutData>
                                <layout:GridData span="XL2 L2 M6 S12"/>
                            </layoutData>
                        </VBox>
                        <HBox justifyContent="End">
                            <Button text="검색" type="Emphasized" press="onSearch" />
                            <Button text="초기화" type="Transparent" press="onReset" class="sapUiTinyMarginBegin"/>
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData>
                        </HBox>
                    </form:content>
                </form:SimpleForm>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <t:Table 
                id="RequestTable"
                rows="{Request>/RequestOrder}"
                selectionMode="MultiToggle"
                width="auto">
                <t:extension>
                    <OverflowToolbar >
                        <Title id="TableName" text="물품 요청 목록" />
                        <ToolbarSpacer />
                        <Button 
                            text="물품 요청 생성"
                            press="onCreateOrder"
                            type="Transparent"/>
                        <Button
                            icon="sap-icon://sort"
                            tooltip="정렬"
                            press="onSort"
                            type="Transparent" />
                    </OverflowToolbar>
                </t:extension>
                <t:columns>
                    <t:Column hAlign="Center">
                        <Label text="요청번호"/>
                        <t:template>
                            <Text text="{Request>ReqNum}" />
                        </t:template>
                    </t:Column>
                    <t:Column hAlign="Center">
                        <Label text="요청 물품"/>
                        <t:template>
                            <Text text="{Request>ReqGood}" />
                        </t:template>
                    </t:Column>
                    <t:Column hAlign="Center">
                        <Label text="물품 개수"/>
                        <t:template>
                            <Text text="{Request>ReqQty}" />
                        </t:template>
                    </t:Column>
                    <t:Column hAlign="Center">
                        <Label text="요청자"/>
                        <t:template>
                            <Text text="{Request>Requester}" />
                        </t:template>
                    </t:Column>
                    <t:Column hAlign="Center">
                        <Label text="요청 일자"/>
                        <t:template>
                            <Text text="{Request>ReqDate}" />
                        </t:template>
                    </t:Column>
                    <t:Column hAlign="Center">
                        <Label text="처리 상태"/>
                        <t:template>
                            <ObjectStatus 
                                text="{
                                    path: 'Request>ReqStatus',
                                    formatter: '.formatter.statusText'
                                }"
                                state="{= ${RequestModel>request_state} === 'A' ? 'Success' :
                                        ${RequestModel>request_state} === 'C' ? 'Error' :
                                        'None'}"/>
                        </t:template>
                    </t:Column>
                </t:columns>
            </t:Table>
        </f:content>
    </f:DynamicPage>

</mvc:View>