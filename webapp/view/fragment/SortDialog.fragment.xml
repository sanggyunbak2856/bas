        id="SortDialog"
        confirm="onConfirmSortDialog"
        title="물품요청정렬">
        <sortItems>
            <ViewSettingsItem text="요청번호" key="ReqNum" selected="true"/>
            <ViewSettingsItem text="요청물품" key="ReqGood"/>
            <ViewSettingsItem text="물품개수" key="ReqQty"/>
            <ViewSettingsItem text="요청자" key="Requester"/>
            <ViewSettingsItem text="요청일자" key="ReqDate"/>
            <ViewSettingsItem text="처리상태" key="ReqStatus"/>
        </sortItems>
    </ViewSettingsDialog>
 </core:FragmentDefinition>