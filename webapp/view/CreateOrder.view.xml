<mvc:View
    controllerName="project1.controller.CreateOrder"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout">
    <f:DynamicPage id="page" headerExpanded="false" showFooter="true" toggleHeaderOnTitleClick="true">
        <f:title>
            <f:DynamicPageTitle >
                <f:heading>
                    <HBox>
                        <Title text="물품 요청 생성" />
                    </HBox>
                </f:heading>
                <f:snappedContent>
                    <form:SimpleForm layout="ResponsiveGridLayout">
                        <form:content>
                            <VBox >
                                <Label text="요청 번호"></Label>
                                <Input  id="CreateReqNum" />
                                <layoutData>
                                    <layout:GridData span="XL6 L6 M3 S12" />
                                </layoutData>
                            </VBox>
                            <VBox >
                                <Label text="요청 일자 "></Label>
                                <DatePicker 
                                    id="CreateReqDate"
                                    displayFormat="yyyy-MM"
                                />
                                <layoutData>
                                    <layout:GridData span="XL6 L6 M3 S12" />
                                </layoutData>
                            </VBox>
                            <VBox >
                                <Label text="요청 물품"></Label>
                                <Input  id="CreateReqGood" />
                                <layoutData>
                                    <layout:GridData span="XL6 L6 M3 S12" />
                                </layoutData>
                            </VBox>
                            <VBox >
                                <Label text="물품 개수"></Label>
                                <Input  id="CreateReqQty" type="Number"/>
                                <layoutData>
                                    <layout:GridData span="XL6 L6 M3 S12" />
                                </layoutData>
                            </VBox>
                            <VBox >
                                <Label text="요청자"></Label>
                                <Input  id="CreateRequester" />
                                <layoutData>
                                    <layout:GridData span="XL6 L6 M3 S12" />
                                </layoutData>
                            </VBox>
                            <VBox >
                                <Label text="예상 가격"></Label>
                                <Input  id="CreateReqEstimatedPrice" type="Number"/>
                                <layoutData>
                                    <layout:GridData span="XL6 L6 M3 S12" />
                                </layoutData>
                            </VBox>
                            <VBox >
                                <Label text="요청 사유"></Label>
                                <Input  id="CreateReqReason" />
                                <layoutData>
                                    <layout:GridData span="XL12 L12 M12 S12" />
                                </layoutData>
                            </VBox>

                        </form:content>
                    </form:SimpleForm>
                </f:snappedContent>
            </f:DynamicPageTitle>
        </f:title>
        <f:footer>
            <OverflowToolbar >
                <ToolbarSpacer />
                <Button type="Emphasized" text="생성" />
                <Button type="Default" text="취소" press="onBack" />
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>